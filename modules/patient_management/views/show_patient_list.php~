	<thead>
		<tr>
			<th>Nom</th>
			<th>Prénom</th>
			<th>Age</th>
			<th>Sexe</th>
		</tr>
	</thead>
	<tbody>
<?php

foreach ($list_patient as $key => $feature_patient) {
	echo'		<tr>';
	echo'			<td><a href=\'.?module=patient_management&action=show_patient_profile&id_patient='.$feature_patient
					.'\'>'.$feature_patient['patient_surname'].'</a></td>'."\n";
	echo'			<td>'.$feature_patient['patient_firstname'].'</td>'."\n";
	echo'			<td>'.$feature_patient['patient_date_birth'].'</td>'."\n";

	$sex_title = '';
	if ($feature_patient['patient_sex'] == 'm')
		$sex_title = 'garçon';
	elseif ($feature_patient['patient_sex'] == 'f')
		$sex_title = 'fille';

	echo'			<td>'.$sex_title.'</td>'."\n";
	echo'		</tr>';	
}

?>
	</tbody>
</table>

