<?php

if (isset ($_POST['user_connection']) and isset ($_POST['user_login']) and isset ($_POST['user_password'])) {
	include (MODEL_PATH.'select_user_session.php');

	if ( isset ($user['id_user'])) {
		$_SESSION = array (
			'id_user' => $user['id_user'],
			'user_surname' => $user['user_surname'],
			'lang' => $user['language_code'],
			'language_name' => $user['language_name']
			);
		header ('location:.');
	}
	else {
		$message = 'Erreur : login ou mot de passe incorrect';
		include (VIEW_RELATIVE_PATH.'connection.php');
	}
}

else {
	$message = '';
	include (VIEW_RELATIVE_PATH.'connection.php');
}

?>
