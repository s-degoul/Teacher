<?php

try {
	if (!isset ($db))
		$db = new PDO ('mysql:host='.HOST_DB.';dbname='.NAME_DB, LOGIN_DB, PASSWORD_DB);

	$code_lang_format = str_replace('-', '_', $_SESSION['lang']);

	$request = $db -> prepare (
		'SELECT CT.id_target,  CT.cycle_target_date, CE.id_cycle_educ, CE.cycle_educ_start_date, CE.cycle_educ_eval_date,
			T.target_name_'.$code_lang_format.' as target_name, T.target_num
		FROM table_cycle_target as CT
			INNER JOIN table_cycle_educ as CE ON CT.id_cycle_educ = CE.id_cycle_educ
			INNER JOIN table_target T ON CT.id_target = T.id_target
		WHERE CE.id_patient = :id_patient'
		);

	$request -> execute (array (
		'id_patient' => $_GET['id_patient'] // or $_SESSION ...
	));

	$list_cycle_educ = array();

	$request -> setFetchMode(PDO::FETCH_ASSOC);

	while ($one_cycle_educ = $request -> fetch()) {
		$cycle_educ_start_date = $one_cycle_educ['cycle_educ_start_date'];
		$target_num = $one_cycle_educ['target_num'];
		$list_cycle_educ[$cycle_educ_start_date]
			= array (
				'id_cycle_educ' => $one_cycle_educ['id_cycle_educ'],
				'cycle_educ_eval_date' => $one_cycle_educ['cycle_educ_eval_date']
			);
		$list_cycle_educ[$cycle_educ_start_date]['targets'][$target_num]
			= array (
				'id_target' => $one_cycle_educ['id_target'],
				'target_name' => $one_cycle_educ['target_name'],
				'cycle_target_date' => $one_cycle_educ['cycle_target_date']
			);
	}

	$request -> closeCursor();
}
catch (Exception $e) {
	die ('Erreur : '.$e->getMessage());
}

?>
